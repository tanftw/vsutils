{
  "name": "vsutils",
  "displayName": "VS Utils",
  "description": "Utility functions for VS Code",
  "version": "1.0.0",
  "publisher": "tanftw",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "/images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tanftw/vsutils.git"
  },
  "homepage": "https://github.com/tanftw/vsutils/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/tanftw/vsutils/issues",
    "email": "hi@tan.ng"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "pricing": "Free",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "keywords": [
    "utility",
    "convert",
    "base64",
    "timestamp",
    "html",
    "css",
    "javascript",
    "php"
  ],
  "activationEvents": [
    "onCommand:vsutils.convert"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsutils.perform",
        "title": "Select a conversion to perform",
        "category": "VSUtils"
      }
    ],
    "configuration": {
      "title": "VS Utils",
      "properties": {
        "vsutils.outputLocation": {
          "title": "Output Location",
          "type": "string",
          "default": "replace",
          "enum": [
            "clipboard",
            "replace",
            "newLine",
            "newEditor"
          ],
          "enumDescriptions": [
            "Copy the converted text to the clipboard",
            "Replace the current selection with the converted text",
            "Insert the converted text on the next line after the current selection",
            "Open a new editor with the converted text"
          ],
          "description": "Where to output the converted text"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "html-entities": "^2.3.3",
    "node-fetch": "^3.3.0",
    "php-serialize": "^4.0.2"
  }
}